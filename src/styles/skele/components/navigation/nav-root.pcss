.nav-root {
  --nav-root-width: 100%;
  background: var(--color-bg);
  padding: var(--spacing-md);
  width: var(--nav-root-width);

  &.sidebar {
    --nav-root-width: 250px;
    height: 100%;
    max-height: 100vh;
    overflow-y: auto;
    position: sticky;
    top: 0;
  }

  &.horizontal {
    align-items: center;
    background: var(--color-bg);
    display: flex;
    justify-content: space-between;
    padding: var(--spacing-sm) var(--spacing-md);
  }
}
