{
  "format_on_save": "on",
  "formatter": "prettier",
  "code_actions_on_format": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },
  "language_servers": ["eslint"],
  "languages": {
    "JavaScript": {
      "language_servers": ["eslint"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "TypeScript": {
      "language_servers": ["eslint", "typescript-language-server"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "JSX": {
      "language_servers": ["eslint"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "TSX": {
      "language_servers": ["eslint", "typescript-language-server"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "Astro": {
      "language_servers": ["astro-ls", "eslint"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "JSON": {
      "language_servers": ["eslint"],
      "format_on_save": "on",
      "formatter": "prettier"
    }
  }
}